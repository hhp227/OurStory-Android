<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!-- 배경 색깔 -->
            <solid
                android:color="#90ffffff" />
            <!-- 모서리 둥근정도 -->
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    <item>
        <shape>
            <!-- 배경 색깔 -->
            <solid
                android:color="#ffffff" />
            <!-- 둘레 색상 -->
            <stroke
                android:width="1dp"
                android:color="#bcbcbc" /> 
            <!-- 모서리 둥근정도 -->
            <corners
                android:radius="3dp" />
        </shape>
    </item>
</selector>