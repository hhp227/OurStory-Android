<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:splitMotionEvents="false">

    <ScrollView
            android:scrollbarStyle="outsideOverlay"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:splitMotionEvents="false">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#FFFFFF"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="120dp">

                        <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="15dp">

                            <TextView
                                    android:ellipsize="end"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="이메일"
                                    android:singleLine="true" />

                            <TextView
                                    android:id="@+id/tv_email"
                                    android:ellipsize="end"
                                    android:gravity="right|center_vertical|center_horizontal|center|end"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:singleLine="true"
                                    android:layout_weight="1" />

                        </LinearLayout>

                        <View
                                android:background="@color/colorAccent"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp" />

                        <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="15dp">

                            <TextView
                                    android:ellipsize="end"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="패스워드"
                                    android:singleLine="true" />

                            <TextView
                                    android:id="@+id/tv_password"
                                    android:ellipsize="end"
                                    android:gravity="right|center_vertical|center_horizontal|center|end"
                                    android:background="@android:color/transparent"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:text="변경하기"
                                    android:singleLine="true"
                                    android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                                    android:drawablePadding="15dp"
                                    android:layout_weight="1" />

                        </LinearLayout>

                        <View
                                android:background="@color/colorAccent"
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp" />

                        <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginTop="15dp">

                            <TextView
                                    android:ellipsize="end"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:text="가입일"
                                    android:singleLine="true" />

                            <LinearLayout
                                    android:id="@+id/linear_public"
                                    android:gravity="bottom|right|center_vertical|center_horizontal|center|end"
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                <TextView
                                        android:id="@+id/tv_create_at"
                                        android:ellipsize="end"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:singleLine="true"
                                        android:layout_weight="1" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                            android:background="@color/colorAccent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />

                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:gravity="bottom|left|center_vertical|center_horizontal|center|start"
                                android:background="#EEEEEE"
                                android:paddingLeft="10dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="기본정보" />

                        <LinearLayout
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="이름"
                                        android:singleLine="true" />

                                <TextView
                                        android:id="@+id/tv_name"
                                        android:ellipsize="end"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:singleLine="true" />

                            </LinearLayout>

                            <View
                                    android:background="@color/colorAccent"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"/>

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="생년월일"
                                        android:singleLine="true" />

                                <TextView
                                        android:id="@+id/tv_birth_date"
                                        android:ellipsize="end"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:singleLine="true" />

                            </LinearLayout>

                            <View
                                    android:background="@color/colorAccent"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp" />

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="성별"
                                        android:singleLine="true" />

                                <TextView
                                        android:id="@+id/tv_gender"
                                        android:ellipsize="end"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:singleLine="true" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                            android:background="@color/colorAccent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp" />

                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <TextView
                                android:gravity="bottom|left|center_vertical|center_horizontal|center|start"
                                android:background="#EEEEEE"
                                android:paddingLeft="10dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:text="추가정보" />

                        <LinearLayout
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="전화번호"
                                        android:singleLine="true" />

                                <TextView
                                        android:id="@+id/tv_hp"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:background="@android:color/transparent"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:text="등록하기"
                                        android:singleLine="true"
                                        android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                                        android:drawablePadding="15dp"
                                        android:layout_weight="1" />

                            </LinearLayout>

                            <View
                                    android:background="@color/colorAccent"
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp" />

                            <LinearLayout
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_marginTop="15dp">

                                <TextView
                                        android:ellipsize="end"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:text="지역"
                                        android:singleLine="true" />

                                <TextView
                                        android:id="@+id/tv_location"
                                        android:gravity="right|center_vertical|center_horizontal|center|end"
                                        android:background="@android:color/transparent"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:text="등록하기"
                                        android:singleLine="true"
                                        android:drawableRight="@drawable/ic_keyboard_arrow_right_gray_24dp"
                                        android:drawablePadding="15dp"
                                        android:layout_weight="1" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                            android:background="@color/colorAccent"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                </LinearLayout>

                <FrameLayout
                        android:layout_gravity="top|center_vertical|center_horizontal|center"
                        android:orientation="vertical"
                        android:background="@drawable/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">

                    <ImageView
                            android:id="@+id/iv_profile_image"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/profile_img_circle"
                            android:scaleType="fitCenter"/>

                </FrameLayout>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>