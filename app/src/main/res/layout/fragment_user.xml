<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.hhp227.application.util.URLs" />

        <variable
                name="viewModel"
                type="com.hhp227.application.viewmodel.UserViewModel" />
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="170dip"
                android:scaleType="centerCrop"
                android:src="@drawable/user_background" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:background="#77000000"
                android:paddingBottom="14dip"
                android:paddingStart="8dip"
                android:paddingTop="14dip"
                android:text="맴버 정보"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp" />

        <LinearLayout
                android:id="@+id/ll_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:background="#FFFFFF"
                android:layout_below="@+id/image"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp">

            <ImageView
                    android:id="@+id/iv_profile_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:paddingTop="3dp"
                    android:scaleType="fitCenter"
                    app:profileImageFromUrl="@{URLs.URL_USER_PROFILE_IMAGE + viewModel.otherUser.profileImage}"
                    app:profileImageFromBitmap="@{null}"
                    tools:src="@drawable/profile_img_circle" />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dip"
                        android:paddingStart="5dip"
                        android:paddingTop="10dip"
                        android:text="@{viewModel.otherUser.name}"
                        android:textSize="16sp"
                        tools:text="이름" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dip"
                            android:text="가입일"
                            android:textSize="13dp" />

                    <TextView
                            android:id="@+id/tv_created_at"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dip"
                            android:text="@{viewModel.otherUser.createdAt}"
                            android:textSize="13sp"
                            tools:text="날짜"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/ll_container"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:background="#FFFFFF"
                android:layout_weight="0"
                android:layout_below="@+id/ll_line"
                android:orientation="horizontal">

            <Button
                    android:id="@+id/b_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:text="@{!viewModel.state.isFriend ? @string/add_friend : @string/remove_friend}"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:onClick="@{() -> viewModel.addFriend()}" />

            <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

            <Button
                    android:id="@+id/b_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    android:paddingBottom="8dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:text="@android:string/cancel"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />

        </LinearLayout>

    </RelativeLayout>

</layout>